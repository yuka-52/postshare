<%= stylesheet_link_tag 'sessions', :media =>"all" %>
<div class="login-page"></div>
<div class="login-box">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :必須, {class: 'condition'} %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder => "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :必須, {class: 'condition'} %>
    <%= f.password_field :password, autocomplete: "current-password" ,:placeholder => "パスワード"%>
  </div>


  <div class="actions">
    <%= f.submit "ログイン", { class: "action-btn" }%>
  </div>

  <div class="new-userbtn">
    <%= link_to "新しいアカウントを作成",new_user_registration_path, { class: "newaction-btn" } %>
  </div>
</div>
<% end %>
