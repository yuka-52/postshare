<%= stylesheet_link_tag 'registrations_new', :media =>"all" %>
<div class="login-page"></div>
<div class="create-box">
  <h2>新しいアカウントを作成</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :必須, {class: 'condition'} %>
    <%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名"%>
  </div>
  
  <div class="field">
    <%= f.label :必須,{class: 'condition'} %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス"%>
  </div>

  <div class="field">
    <%= f.label :必須,{class: 'condition'} %>
    <% if @minimum_password_length %>
    
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",:placeholder => "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :必須,{class: 'condition'} %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認"%>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成", { class: "create-btn" } %>
  </div>
  
    <%= link_to "すでにアカウントをお持ちの方はログイン", new_user_session_path, class: 'newaction-btn' %>
<% end %>
